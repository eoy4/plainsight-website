---
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  link: string;
  image: ImageMetadata;
}

const { title, description, link, image } = Astro.props;
---

<article class="case-study-card">
  <a href={link} class="case-study-image-link">
    <Image src={image} alt={`${title} screenshot`} class="case-study-image" />
    <div class="case-study-overlay">
      <span class="overlay-button">View case study</span>
    </div>
  </a>
  <div class="case-study-content">
    <h3 class="case-study-title">
      <a href={link}>{title}</a>
    </h3>
    <p class="case-study-description">{description}</p>
  </div>
</article>

<style>
  .case-study-card {
    display: flex;
    flex-direction: column;
  }

  .case-study-image-link {
    display: block;
    overflow: hidden;
    border-radius: 0.75rem;
    margin-bottom: 1rem;
    position: relative;
    border: 1px solid var(--color-border-subtle);
  }

  .case-study-image {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .case-study-overlay {
    position: absolute;
    inset: 0;
    background: rgba(10, 10, 10, 0.7);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: 0.75rem;
  }

  .case-study-image-link:hover .case-study-overlay {
    opacity: 1;
  }

  .overlay-button {
    display: inline-block;
    padding: 0.875rem 2rem;
    background: transparent;
    color: white;
    border: 2px solid white;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 0.9375rem;
    transition: all 0.2s ease;
  }

  .case-study-image-link:hover .overlay-button {
    transform: translateY(-2px);
    background: rgba(255, 255, 255, 0.1);
  }

  .overlay-button:hover {
    background: white;
    color: var(--color-bg);
    transform: translateY(-4px);
  }

  .case-study-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .case-study-title {
    font-size: 1.75rem;
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: -0.01em;
    margin: 0;
  }

  .case-study-title a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .case-study-title a:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .case-study-description {
    font-size: 1.0625rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0;
  }
</style>
