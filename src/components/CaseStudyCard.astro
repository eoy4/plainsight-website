---
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  link: string;
  image: ImageMetadata;
}

const { title, description, link, image } = Astro.props;
---

<article class="flex flex-col">
  <a href={link} class="group block overflow-hidden rounded-xl mb-4 relative border border-border-subtle">
    <Image src={image} alt={`${title} screenshot`} class="w-full h-auto block transition-transform duration-400 ease-out group-hover:scale-105" />
    <div class="absolute inset-0 bg-black/40 backdrop-blur-sm flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-400 ease-out rounded-xl">
      <span class="inline-block py-3.5 px-8 bg-transparent text-white border-2 border-white rounded-lg font-semibold text-15 transition-all duration-300 ease-out group-hover:-translate-y-0.5 hover:!bg-white hover:!text-text hover:!-translate-y-1">View case study</span>
    </div>
  </a>
  <div class="flex flex-col gap-2">
    <h3 class="text-item-title font-bold leading-[1.2] tracking-snug m-0">
      <a href={link} class="text-text no-underline transition-colors duration-200 hover:text-accent hover:no-underline">{title}</a>
    </h3>
    <p class="text-body text-text-muted leading-loose m-0">{description}</p>
  </div>
</article>
