---
interface Props {
  heading: string;
  ctaText?: string;
  ctaLink?: string;
}

const { heading, ctaText, ctaLink } = Astro.props;
---

<section class="dark-section animate-on-scroll relative py-34 max-md:py-20 text-center overflow-hidden bg-bg-dark-process" id="contact">
  <!-- Glow effect: inline style needed for complex gradient with CSS variables -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[140%] pointer-events-none z-0" style="background: radial-gradient(ellipse 50% 50% at 50% 50%, var(--color-hero-glow-1) 0%, var(--color-hero-glow-2) 40%, transparent 70%);" aria-hidden="true"></div>
  <div class="container">
    <div class="relative z-1 max-w-[800px] mx-auto">
      <h2 class="font-heading text-cta-title font-extrabold tracking-tighter leading-snug mb-6 text-text">{heading}</h2>
      <div class="text-22 text-text-muted leading-loose mb-10 [&_p]:mb-0">
        <slot />
      </div>
      {ctaText && ctaLink && (
        <a href={ctaLink} class="btn-cta !bg-pop !text-bg-dark-process font-bold hover:!bg-pop-hover max-md:py-3.5 max-md:px-8 max-md:w-full max-md:text-center">{ctaText}</a>
      )}
    </div>
  </div>
</section>
