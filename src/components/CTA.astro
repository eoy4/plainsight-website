---
interface Props {
  heading: string;
  ctaText?: string;
  ctaLink?: string;
}

const { heading, ctaText, ctaLink } = Astro.props;
---

<section class="section-cta dark-section animate-on-scroll relative py-34 text-center overflow-hidden mt-32" style="background: var(--color-bg-dark-process);" id="contact">
  <div class="cta-glow" aria-hidden="true"></div>
  <div class="container">
    <div class="relative z-1 max-w-[800px] mx-auto">
      <h2 class="font-heading text-cta-title font-extrabold tracking-tighter leading-snug mb-6 text-text">{heading}</h2>
      <div class="cta-prose text-22 text-text-muted leading-loose mb-10">
        <slot />
      </div>
      {ctaText && ctaLink && (
        <a href={ctaLink} class="btn-cta">{ctaText}</a>
      )}
    </div>
  </div>
</section>

<style>
  /* ── CTA section ── */
  .cta-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120%;
    height: 140%;
    background: radial-gradient(ellipse 50% 50% at 50% 50%, var(--color-hero-glow-1) 0%, var(--color-hero-glow-2) 40%, transparent 70%);
    pointer-events: none;
    z-index: 0;
  }

  .cta-prose :global(p) {
    margin-bottom: 0;
  }

  .section-cta .btn-cta {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: var(--color-pop);
    color: var(--color-bg-dark-process);
    border-radius: 0.625rem;
    font-weight: 700;
    font-size: 1.125rem;
    letter-spacing: -0.01em;
    transition: all 0.3s var(--ease-out-expo);
    box-shadow: 0 0 20px var(--color-pop-glow), 0 0 60px var(--color-pop-glow), inset 0 1px 0 rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.1);
    text-decoration: none;
  }

  .section-cta .btn-cta:hover {
    background: var(--color-pop-hover);
    box-shadow: 0 0 30px rgba(184, 245, 69, 0.35), 0 0 80px var(--color-pop-glow), 0 4px 16px rgba(0, 0, 0, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
    text-decoration: none;
  }

  .section-cta .btn-cta:active {
    transform: translateY(0);
    transition-duration: 0.1s;
  }

  @media (max-width: 768px) {
    .section-cta {
      padding: 5rem 0;
    }

    .btn-cta {
      padding: 0.875rem 2rem;
      font-size: 1rem;
      width: 100%;
      text-align: center;
    }
  }
</style>
