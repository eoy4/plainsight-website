---
import { getCollection, render } from "astro:content";
import Base from "../layouts/Base.astro";

const sections = (await getCollection("services")).sort(
  (a, b) => a.data.order - b.data.order
);

const rendered = await Promise.all(
  sections.map(async (s) => ({
    ...s,
    rendered: await render(s),
  }))
);

const icons: Record<string, string> = {
  "quick-sites": `<svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/></svg>`,
  "custom-builds": `<svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2L2 7l10 5 10-5-10-5z"/><path d="M2 17l10 5 10-5"/><path d="M2 12l10 5 10-5"/></svg>`,
  "everything-else": `<svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>`,
};

let svcIdx = 0;
const processedSections = rendered.map(s => ({
  ...s,
  _svcIdx: (s.data.section !== 'intro' && s.data.section !== 'cta') ? svcIdx++ : -1,
}));
---

<Base title="Services | Plain Sight" description="Web development services â€” quick sites, custom builds, audits, redesigns, and more.">
  <main class="container pt-32 max-md:pt-24">
    {processedSections.map((section) => {
      const { Content } = section.rendered;
      const d = section.data;

      if (d.section === "intro") return (
        <section class="services-hero bg-surface border border-border rounded-2xl py-14 px-12 max-md:py-10 max-md:px-6 mb-10 relative overflow-hidden">
          <h1 class="text-page-hero font-extrabold leading-snug mb-5 relative">{d.heading}</h1>
          <div class="services-hero-prose max-w-[640px] relative">
            <Content />
          </div>
        </section>
      );

      if (d.section === "cta") return (
        <section class="section-cta mt-8">
          <div class="cta-glow" aria-hidden="true"></div>
          <div class="cta-content">
            <h2 class="cta-title">{d.heading}</h2>
            <div class="cta-prose">
              <Content />
            </div>
            {d.cta_text && <a href={d.cta_link} class="btn btn-cta">{d.cta_text}</a>}
          </div>
        </section>
      );

      const isAlt = section._svcIdx % 2 !== 0;
      return (
        <section class={`grid grid-cols-[1fr_1.6fr] max-md:grid-cols-1 gap-12 max-md:gap-6 ${isAlt ? 'bg-surface-raised' : 'bg-surface'} border border-border rounded-2xl p-10 max-md:py-8 max-md:px-6 mb-8`}>
          <div class="sticky top-24 self-start max-md:static">
            {icons[d.section] && (
              <div class="text-accent mb-4" set:html={icons[d.section]} />
            )}
            {d.title && <h2 class="text-service-title font-bold leading-[1.2] mb-[0.35rem]">{d.title}</h2>}
            <p class="text-service-tagline text-text-muted italic leading-normal mb-5">{d.heading}</p>
            {d.intro && <p class="text-base text-text-muted leading-loose m-0">{d.intro}</p>}
          </div>
          <div class="service-card-details">
            <Content />
          </div>
        </section>
      );
    })}
  </main>
</Base>

<style>
  .services-hero::before {
    content: '';
    position: absolute;
    top: -40%;
    right: -20%;
    width: 60%;
    height: 160%;
    background: radial-gradient(ellipse at center, var(--color-accent-subtle) 0%, transparent 70%);
    opacity: 0.4;
    pointer-events: none;
  }

  .services-hero-prose :global(p) {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  .service-card-details :global(h2) {
    font-size: 1.1rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
    color: var(--color-text);
  }

  .service-card-details :global(h2:not(:first-child)) {
    margin-top: 2rem;
  }

  .service-card-details :global(p) {
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0 0 0.75rem;
  }

  .service-card-details :global(strong) {
    color: var(--color-text);
  }
</style>
