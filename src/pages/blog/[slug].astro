---
import { getCollection, render } from 'astro:content';
import Base from '../../layouts/Base.astro';

// getStaticPaths generates all blog post routes at build time
// This demonstrates Astro's dynamic routing with static generation
export async function getStaticPaths() {
  const posts = await getCollection('blog');

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const formattedDate = post.data.date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Base title={`${post.data.title} | Plain Sight Blog`} description={post.data.description}>
  <main class="container">
    <article class="blog-post">
      <header class="blog-post-header">
        <a href="/blog" class="back-link">‚Üê Back to Blog</a>
        <h1>{post.data.title}</h1>
        <div class="post-meta">
          <time datetime={post.data.date.toISOString().split('T')[0]}>{formattedDate}</time>
          <span class="author">by {post.data.author}</span>
        </div>
      </header>

      <div class="blog-post-content">
        <Content />
      </div>
    </article>
  </main>
</Base>

<style>
  .blog-post {
    max-width: 700px;
    margin: 0 auto;
    padding: 4rem 0;
  }

  .blog-post-header {
    margin-bottom: 3rem;
  }

  .back-link {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    display: inline-block;
    margin-bottom: 1.5rem;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  h1 {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .post-meta {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    display: flex;
    gap: 1rem;
    font-family: var(--font-mono);
  }

  .blog-post-content :global(h2) {
    font-size: 1.5rem;
    margin: 2.5rem 0 1rem;
    font-weight: 600;
  }

  .blog-post-content :global(p) {
    margin-bottom: 1.5rem;
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  .blog-post-content :global(ul),
  .blog-post-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
    color: var(--color-text-muted);
  }

  .blog-post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .blog-post-content :global(code) {
    background: var(--color-surface);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: var(--font-mono);
  }

  .blog-post-content :global(pre) {
    background: var(--color-surface);
    padding: 1.5rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
    border: 1px solid var(--color-border);
  }

  .blog-post-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .blog-post-content :global(strong) {
    color: var(--color-text);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }
  }
</style>
